// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  username       String   @unique
  hashedPassword String
  salt           String   @default("")
  createdAt      DateTime @default(now())
  profile        Profile?
}

// TODO: Manage user online status somewhere else
// TODO: Add default avatar picture URL
model Profile {
  id        String       @id @default(uuid())
  name      String?
  bio       String?
  avatarUrl String?
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String       @unique
  friends   Friendship[] @relation("ProfileToFriends")
  friendOf  Friendship[] @relation("FriendsToProfile")
}

model Friendship {
  id        String           @id @default(uuid())
  profile   Profile          @relation("ProfileToFriends", fields: [profileId], references: [id], onDelete: Cascade)
  profileId String
  friendOf  Profile          @relation("FriendsToProfile", fields: [friendId], references: [id], onDelete: Cascade)
  friendId  String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now()) @updatedAt
  status    FriendshipStatus @default(PENDING)

  @@unique([profileId, friendId])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
