{
  "name": "fastify-api",
  "version": "1.0.0",
  "description": "Fastify API with Prisma as the ORM and SQlite as the database",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "populate": "npx tsx scripts/populate_db.ts",
    "start": "node dist/src/server.js",
    "start-dev": "npx nodemon --signal SIGTERM dist/src/server.js",
    "dev": "npx tsx src/server.ts",
    "dev-build": "tsc --watch",
    "test": "vitest",
    "test-db": "npx tsx scripts/test_db.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^9.0.4",
    "@prisma/client": "^6.5.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@faker-js/faker": "^9.5.1",
    "@types/node": "^22.13.9",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  }
}
